<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="developersancho.firebaseilkay.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/btnEkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="45dp"
        android:text="EKLE" />

    <Button
        android:id="@+id/btnListele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnPage"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="61dp"
        android:text="LİSTELE" />

    <Button
        android:id="@+id/btnPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEkle"
        android:layout_marginTop="70dp"
        android:text="Diğer Sayfaya Geç" />


</RelativeLayout>
